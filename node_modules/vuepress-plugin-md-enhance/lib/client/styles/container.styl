$darkBgColor ?= #1e1e1e
$darkTextColor ?= #9e9e9e

.custom-block
  position relative

  .custom-block-title
    margin-bottom -0.25rem
    font-weight 600

  &.info, &.note, &.tip, &.warning, &.danger
    margin 1rem 0
    padding 0.25rem 1rem
    border-color var(--hint-box-border-color)
    border-left-width 0.3rem
    border-left-style solid
    border-radius 0.5rem
    background var(--hint-box-bgcolor)

    .theme-dark &
      background var(--hint-box-title-color)

    .custom-block-title
      position relative
      padding-left 1.5rem
      font-weight 600
      line-height 1.25
      color var(--hint-box-title-color)

      .theme-dark &
        color var(--hint-box-bgcolor)

      &::before
        content ' '
        position absolute
        left 0
        width 20px
        height 20px
        background-position left
        background-repeat no-repeat

  &.info, &.note, &.tip, &.warning, &.danger, &.details
    a
      color var(--accent-color, $accentColor)

    .theme-dark &
      background lighten($darkBgColor, 10%)
      color lighten($darkTextColor, 10%)

      code
        background #444

  &.info
    --hint-box-border-color #4cb3d4
    --hint-box-bgcolor #eef9fd
    --hint-box-title-color #193c47

    .custom-block-title
      &::before
        background-image url('../icons/info.svg')

        .theme-dark &
          background-image url('../icons/info-dark.svg')

  &.note
    --hint-box-border-color #d4d5d8
    --hint-box-bgcolor #fdfdfe
    --hint-box-title-color #474748

    .custom-block-title
      &::before
        background-image url('../icons/note.svg')

        .theme-dark &
          background-image url('../icons/note-dark.svg')

  &.tip
    --hint-box-border-color #009400
    --hint-box-bgcolor #e6f6e6
    --hint-box-title-color #003100

    .custom-block-title
      &::before
        background-image url('../icons/tip.svg')

        .theme-dark &
          background-image url('../icons/tip-dark.svg')

  &.warning
    --hint-box-border-color #e6a700
    --hint-box-bgcolor #fff8e6
    --hint-box-title-color #4d3800

    .custom-block-title
      &::before
        background-image url('../icons/warning.svg')

        .theme-dark &
          background-image url('../icons/warning-dark.svg')

  &.danger
    --hint-box-border-color #e13238
    --hint-box-bgcolor #ffebec
    --hint-box-title-color #4b1113

    .custom-block-title
      &::before
        background-image url('../icons/danger.svg')

        .theme-dark &
          background-image url('../icons/danger-dark.svg')

  &.details
    display block
    position relative
    margin 1.6em 0
    padding 1.6em
    background #eee
    border-radius 0.25rem

    h4
      margin-top 0

    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0

    summary
      outline none
      cursor pointer

    &[open] summary
      margin-bottom 0.5em
